<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/login.css" />
<h1>Reset your password</h1>
<div>
	<form method="post">
		<label for="password">Password</label>
		<input
			type="password"
			id="password"
			class="solo-input"
			name="password"
			minlength="8"
			required
		/>
		<button>Submit</button>
	</form>
</div>
