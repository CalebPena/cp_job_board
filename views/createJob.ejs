<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/jobs.css" />
<h1>New Job Listing</h1>
<div>
	<form action="/class/<%= id %>/create" method="post">
		<div>
			<span>
				<label for="title">Job Title</label>
				<input
					type="text"
					id="title"
					name="jobTitle"
					minlength="2"
					maxlength="64"
					required
				/>
			</span>
		</div>
		<div>
			<span>
				<label for="company">Company</label>
				<input
					type="text"
					id="company"
					name="company"
					minlength="2"
					maxlength="64"
					required
				/>
			</span>
		</div>
		<div>
			<h2 class="salary-title">Salary:</h2>
			<span>
				<label for="min">Min</label>
				<input
					type="number"
					id="min"
					name="salary[min]"
					min="0"
					step=".01"
					required
				/>
			</span>
			<span>
				<label for="max">Max</label>
				<input type="number" id="max" name="salary[max]" min="0" step=".01" />
			</span>
			<select name="salaryType" id="salaryType" required>
				<option value="Hourly">Hourly</option>
				<option value="Yearly">Yearly</option>
			</select>
		</div>
		<label for="description">Description:</label>
		<div>
			<textarea
				name="description"
				id="description"
				cols="30"
				rows="10"
				required
			></textarea>
		</div>
		<div>
			<label for="career">Career Tracks:</label>
			<select multiple name="careerTracks" id="career" class="custom-select">
				<% for (let ct of classroom.validCareerTracks){%>
				<option value="<%= ct %>"><%= ct %></option>
				<% } %>
			</select>
		</div>
		<div>
			<label for="tags">Tags:</label>
			<select multiple name="tags" id="tags" class="custom-select">
				<% for (let tag of classroom.validTags){%>
				<option value="<%= tag %>"><%= tag %></option>
				<% } %>
			</select>
		</div>
		<div><button type="submit">Submit</button></div>
	</form>
</div>
<script src="/javascript/form.js"></script>
