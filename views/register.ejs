<% layout('layouts/boilerplate') %>
<h1>Register</h1>
<div class="login-box">
	<form action="/register" method="post">
		<div>
			<label for="email">Email</label>
			<input type="text" id="email" name="email" required autofocus />
		</div>
		<div>
			<label for="username">Full Name</label>
			<input type="text" id="username" name="username" minlength="2" required />
		</div>
		<div>
			<label for="status">Status</label>
			<select name="status" id="status">
				<option value="Leader" selected>Leader</option>
				<option value="Alumni">Alumni</option>
				<option value="Coach">Coach</option>
			</select>
		</div>
		<div id="cpClass-box">
			<span>
				<label for="cpClass-year">Class</label>
				<span class="class-input">
					<input
						type="number"
						id="cpClass-year"
						name="cpClass[year]"
						min="2010"
						placeholder="Year"
					/>
					<select type="text" id="cpClass-class" name="cpClass[class]">
						<option value=""></option>
						<option value="C1">C1</option>
						<option value="C2">C2</option>
						<option value="C3">C3</option>
						<option value="C4">C4</option>
					</select>
					<input
						type="text"
						id="cpClass-location"
						name="cpClass[location]"
						maxlength="3"
						placeholder="DEN"
					/>
				</span>
			</span>
		</div>
		<div id="career-track-box">
			<label for="career-track">Career Track</label>
			<select type="text" id="career-track" name="careerTrack">
				<option value=""></option>
				<option value="Assistant">Assistant</option>
				<option value="Bookkeeping">Bookkeeping</option>
				<option value="CDL">CDL</option>
				<option value="CNA">CNA</option>
				<option value="Culinary">Culinary</option>
				<option value="Insurance">Insurance</option>
				<option value="Medical Admin Assistant">Medical Admin Assistant</option>
				<option value="Medical Assistant (MA)">Medical Assistant (MA)</option>
				<option value="Medical Billing and Coding">Medical Billing and Coding</option>
				<option value="Pharmacy Technician">Pharmacy Technician</option>
				<option value="Tech Sales">Tech Sales</option>
				<option value="Trades">Trades</option>
			</select>
		</div>
		<div>
			<label for="password">Password</label>
			<input
				type="password"
				id="password"
				name="password"
				minlength="8"
				required
			/>
		</div>
		<button class="btn">Create Account</button>
	</form>
	<script src="/javascript/cpClass.js"></script>
</div>
