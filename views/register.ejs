<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/login.css" />
<h1>Register</h1>
<div class="login-box">
	<form action="/register" method="post">
		<div>
			<label for="email">Email</label>
			<input type="text" id="email" name="email" required autofocus />
		</div>
		<div>
			<label for="username">Username</label>
			<input type="text" id="username" name="username" minlength="2" required />
		</div>
		<div>
			<label for="status">Status</label>
			<select name="status" id="status">
				<option value="Leader" selected>Leader</option>
				<option value="Alumni">Alumni</option>
				<option value="Coach">Coach</option>
			</select>
		</div>
		<div id="cpClass-box">
			<label for="cpClass">Class</label>
			<input type="text" id="cpClass" name="cpClass" />
		</div>
		<div>
			<label for="password">Password</label>
			<input
				type="password"
				id="password"
				name="password"
				minlength="8"
				required
			/>
		</div>
		<button class="btn">Create Account</button>
	</form>
	<script src="/javascript/cpClass.js"></script>
</div>
