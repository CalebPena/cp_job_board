<% layout('layouts/boilerplate') %>

<h1>Register</h1>
<div>
	<form action="/register" method="post">
		<label for="email">Email</label>
		<input
			type="text"
			id="email"
			name="email"
			autocomplete="email"
			required
			autofocus
		/>
		<label for="username">Username</label>
		<input
			type="text"
			id="username"
			name="username"
			autocomplete="username"
			minlength="2"
			required
			autofocus
		/>
		<label for="password">Password</label>
		<input
			type="password"
			id="password"
			name="password"
			minlength="8"
			required
		/>
		<button>Create Account</button>
	</form>
</div>
