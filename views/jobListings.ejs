<% layout('layouts/boilerplate') %>
<h1>Job Listings</h1>
<a href="/class/<%= id %>/create">New Job</a>
<a href="/class/<%= id %>/admin">Admin</a>
<a href="/class/<%= id %>/dashboard">Dashboard</a>

<% for (let i = 0; i < jobs.length; i++) {let job = jobs[i]; %>
<div class="job">
	<h2><%= job.jobTitle %></h2>
	<h3><%= job.company %></h3>
	<% for (let j = 0; j < job.careerTracks.length; j++) {%>
	<span><%= job.careerTracks[j] %> </span><% } %>
	<div><%= job.salary %> <%=job.salaryType%></div>
	<p><%=job.description%></p>
	<% for (let j = 0; j < job.tags.length; j++) {%>
	<span><%=job.tags[j]%> </span>
	<% } %>
</div>
<% } %>
